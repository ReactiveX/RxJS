{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist/cjs",
    "target": "ES5"
  },
  "include": [
    "src/**/*"
  ],
  // XXX: if we don't specify this, tsc adds the value of `outDir` to `exclude`
