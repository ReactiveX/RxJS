{
  "compilerOptions": {
    "diagnostics": true,
    "importHelpers": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./dist/es6",
    "pretty": true,
    "target": "ES5",
    "lib": [
      "es5",
      "es2015.iterable",
      "es2015.collection",
      "es2015.promise",
      "dom"
    ]
    
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": [
    "src/**/*"
  ]
}