{
  "name": "rxjs",
  "version": "7.0.0-alpha.0",
  "description": "Reactive Extensions for JavaScript",
  "sideEffects": false,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(js)": [
      "eslint --fix",
      "git add"
    ],
    "*.@(ts)": [
      "tslint --fix",
      "git add"
    ]
  },
  "scripts-info": {
    "info": "List available script",
    "test": "Execute mocha test runner",
    "watch": "Watch codebase, trigger compile when source code changes"
  },
  "scripts": {
    "test": "npm run prepare-zone && mocha -r ts-node/register -r ./node_modules/zone.js/dist/zone-testing-node-bundle modules/**/*-spec.ts",
    "watch": "watch 'npm run test' modules",
    "prepare-zone": "mkdir -p ./node_modules/@types/zone.js && cp ./node_modules/zone.js/lib/testing/zone-testing.typing.ts ./node_modules/@types/zone.js/index.d.ts",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:reactivex/rxjs.git"
  },
  "keywords": [
    "Rx",
    "RxJS",
    "ReactiveX",
    "ReactiveExtensions",
    "Streams",
    "Observables",
    "Observable",
    "Stream",
    "ES6",
    "ES2015"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/reactivex/rxjs/issues"
  },
  "homepage": "https://github.com/reactivex/rxjs",
  "dependencies": {
    "10": "0.0.1",
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "mocha": "^5.0.5",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "watch": "^1.0.2",
    "zone.js": "github:JiaLiPassion/zone.js#rxjs-test-dist"
  }
}
