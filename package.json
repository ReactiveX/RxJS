{
  "name": "rxjs",
  "version": "7.0.0-alpha.0",
  "description": "Reactive Extensions for JavaScript",
  "sideEffects": false,
  "main": "./index.js",
  "typings": "./index.d.ts",
  "module": "./_esm5/index.js",
  "es2015": "./_esm2015/index.js",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(js)": [
      "eslint --fix",
      "git add"
    ],
    "*.@(ts)": [
      "tslint --fix",
      "git add"
    ]
  },
  "scripts-info": {
    "info": "List available scripts",
    "test": "Execute mocha test runner",
    "dev": "Watch codebase, trigger compile when source code changes",
    "build": "Builds the files (currently not well implemented)"
  },
  "scripts": {
    "pretest": "shx rm -rf tmp/ && tsc -p tsconfig.tests.json",
    "test": "cross-env NODE_PATH=tmp/tests/ mocha --opts mocha-options.opts \"tmp/tests/**/*-spec.js\" && shx rm -rf tmp/",
    "dev": "watch 'npm run test' src",
    "build:umd": "shx rm -rf package/bundles/ && rollup -c",
    "build": "shx rm -rf package/ && shx mkdir -p package/ && shx cp -r src/ package/src/ && tsc -p tsconfig.cjs.json && tsc -p tsconfig.es2015.json && tsc -p tsconfig.es5.json && tsc -p tsconfig.types.json && shx cp package.json package/package.json && shx cp LICENSE.txt package/LICENSE.txt && npm run build:umd"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:reactivex/rxjs.git"
  },
  "keywords": [
    "Rx",
    "RxJS",
    "ReactiveX",
    "ReactiveExtensions",
    "Streams",
    "Observables",
    "Observable",
    "Stream",
    "ES6",
    "ES2015"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/reactivex/rxjs/issues"
  },
  "homepage": "https://github.com/reactivex/rxjs",
  "dependencies": {
    "10": "0.0.1",
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "@types/sinon": "^5.0.5",
    "chai": "^4.2.0",
    "commitizen": "^2.10.0",
    "cross-env": "^5.1.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "google-closure-compiler-js": "^20181028.0.0",
    "mocha": "^5.0.5",
    "rollup": "^0.67.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-typescript": "^1.0.0",
    "shx": "^0.3.2",
    "sinon": "^6.3.5",
    "ts-loader": "^5.3.0",
    "tsconfig-paths": "^3.3.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.9.1",
    "typescript": "^3.1.4",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "watch": "^1.0.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  }
}
